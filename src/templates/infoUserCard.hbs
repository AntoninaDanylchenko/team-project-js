
<li class='list__team'>
  <picture>
    <source type='image/webp' srcset='{{webp}}'  />
    <img
      class='list__team-img'
      src='{{photo}}'
      alt='{{name}}'
      width='190'
      height='190'
      loading="lazy"
    />
  </picture>
  <div class='list__team-wrapper'>
    <p class='list__team-title'>{{name}}</p>
    <p class='list__team-subtitle'>{{position}}</p>
    <a
      class='list__team-link'
      target='_blank'
      href='{{github}}'
      rel='noopener noreferrer'
      aria-label='link to help child`s'
    >
      <span class='list__team-icon'></span>
    </a>
  </div>
</li>

